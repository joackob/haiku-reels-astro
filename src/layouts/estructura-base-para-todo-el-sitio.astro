---
import EstiloAAplicarEnTodoElSitio from "./componentes/estilo-para-aplicar-en-todo-el-sitio.astro";
import CuerpoBaseParaTodoElSitio from "./componentes/cuerpo-base-para-todo-el-sitio.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config/consts"; // Puedes mantener esta importación si estás usando las constantes en otro lugar
import "../styles/global.css";

export interface Props {
	titulo?: string;
	descripcion?: string;
	image?: string;
	imageAlt?: string;
	type?: string;
	keywords?: string;
	author?: string;
	publishDate?: Date;
	modifiedDate?: Date;
	tags?: string[];
	category?: string;
	schema?: Record<string, any>;
}

const {
	titulo = SITE_TITLE,
	descripcion = SITE_DESCRIPTION,
	image,
	imageAlt,
	type,
	keywords,
	author,
	publishDate,
	modifiedDate,
	tags,
	category,
	schema,
}: Props = Astro.props;
---

<CuerpoBaseParaTodoElSitio
	titulo={titulo}
	descripcion={descripcion}
	image={image}
	imageAlt={imageAlt}
	type={type}
	keywords={keywords}
	author={author}
	publishDate={publishDate}
	modifiedDate={modifiedDate}
	tags={tags}
	category={category}
	schema={schema}
>
	<EstiloAAplicarEnTodoElSitio />
	<slot />
</CuerpoBaseParaTodoElSitio>
